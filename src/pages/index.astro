---
import Layout from '../layouts/Layout.astro';
import { Picture } from 'astro:assets';

import Links from '../components/Links.astro';
import coverImage from '../assets/cover.jpg';
---

<Layout>
    <div class="grid min-h-screen bg-white lg:grid-cols-2 dark:bg-black">
        <section class="flex max-w-2xl px-6 mx-auto lg:items-center">
            <div>
                <header class="pt-12">
                    <h1
                        class="px-1.5 text-2xl font-bold text-zinc-800 dark:text-zinc-100 sm:text-3xl"
                        set:text="Andrei IoniÈ›Äƒ"
                    />

                    <h2
                        class="px-1.5 items-center mb-4 text-xl font-light text-zinc-600 dark:text-zinc-400"
                        set:text="Photographer, technologist"
                    />
                </header>

                <nav class="grid sm:grid-cols-2 gap-y-4 gap-x-8">
                    <Links
                        heading="Photography"
                        links={[
                            {
                                name: 'Instagram',
                                url: 'https://www.instagram.com/andrei.on.film/',
                                icon: 'instagram',
                                iconClass: `group-hover:text-[#fd1d1d] group-focus:text-[#fd1d1d]`,
                                rel: 'me',
                            },
                            {
                                name: 'Bluesky',
                                url: 'https://bsky.app/profile/andrei.io',
                                icon: 'bluesky',
                                iconClass: `group-hover:text-[#0085ff] group-focus:text-[#0085ff]`,
                                rel: 'me',
                            },
                            {
                                name: 'Mastodon',
                                url: 'https://mastodon.social/@andreiio',
                                icon: 'mastodon',
                                iconClass: `group-hover:text-[#6364ff] group-focus:text-[#6364ff]`,
                                rel: 'me',
                            },
                            {
                                name: 'Flickr',
                                url: 'https://flickr.com/photos/andreiio/',
                                icon: 'flickr',
                                iconClass: `grayscale-100 group-hover:grayscale-0 group-focus:grayscale-0`,
                                rel: 'me',
                            },
                        ]}
                    />

                    <Links
                        heading="Tech"
                        links={[
                            {
                                name: 'GitHub',
                                url: 'https://github.com/andreiio',
                                icon: 'github',
                                iconClass: `group-hover:text-black group-focus:text-black dark:group-hover:text-white dark:group-focus:text-white`,
                                rel: 'me',
                            },
                            {
                                name: 'LinkedIn',
                                url: 'https://www.linkedin.com/in/andreiio/',
                                icon: 'linkedin',
                                iconClass: `group-hover:text-[#0A66C2] group-focus:text-[#0A66C2]`,
                                rel: 'me',
                            },
                            {
                                name: 'Commit Global',
                                url: 'https://www.commitglobal.org/',
                                icon: 'commitglobal',
                                iconClass: `grayscale-100 group-hover:grayscale-0 group-focus:grayscale-0`,
                            },
                            {
                                name: 'Code for Romania',
                                url: 'https://www.code4.ro/',
                                icon: 'code4romania',
                                iconClass: `grayscale-100 group-hover:grayscale-0 group-focus:grayscale-0`,
                            },
                        ]}
                    />
                </nav>

                <div class="my-8">
                    <h3
                        class="font-semibold border-b text-sm border-zinc-200 text-zinc-600 dark:border-zinc-800 dark:text-zinc-400 p-1.5"
                        set:text="About me"
                    />

                    <div
                        class="mt-2 space-y-4 text-lg leading-relaxed text-zinc-800 px-1.5 dark:text-zinc-300"
                    >
                        <p>
                            I'm a photographer with a passion for the
                            spontaneous beauty found in everyday urban scenes. I
                            work almost exclusively with film, for the
                            deliberate slowness and tactile quality it brings to
                            the creative process.
                        </p>
                        <p>
                            When I'm not behind the camera or in the darkroom, I
                            serve as Chief Technology Officer at Commit Global,
                            a non-profit building open-source tools and
                            supporting the critical civic infrastructure needed
                            around the world.
                        </p>
